---

<Table header="SimCity4">
  <thead slot="head">
    <tr>
      <th colspan="2">フォーラム</th>
      <th>トピック</th>
      <th>記事</th>
      <th>最新記事</th>
    </tr>
  </thead>
  <tbody slot="body">
    {
      links.map((link) => (
        <tr>
          <td class="row1" align="center" valign="middle">
            <img src="/sc4.png" width="32" height="32" alt="新しい記事なし" title="新しい記事なし" />
          </td>
          <td class="row1">
            <span class="forumlink">
              <a href={link.href} class="forumlink">
                {link.title}
              </a>
              <br />
            </span>
            <span class="genmed">
              {link.content}
              {link.contentLink && (
                <a href={link.contentLink.href} class="forumlink">
                  {link.contentLink.title}
                </a>
              )}
              {link.contentFooter}
              <br />
            </span>
            <span class="gensmall">&nbsp; &nbsp;</span>
          </td>
          <td class="row1" align="center" valign="middle">
            <span class="gensmall">{link.topics}</span>
          </td>
          <td class="row1" align="center" valign="middle">
            <span class="gensmall">{link.articles}</span>
          </td>
          <td class="row1" align="center" valign="middle">
            <span class="gensmall">{link.footer}</span>
          </td>
        </tr>
      ))
    }
  </tbody>
</Table>
